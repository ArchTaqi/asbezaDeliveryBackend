{% extends 'base.html.twig' %}

{% block title %}Itemstatus index{% endblock %}

{% block body %}
    <h1>Itemstatus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for itemstatus in itemstatuses %}
            <tr>
                <td>{{ itemstatus.id }}</td>
                <td>{{ itemstatus.name }}</td>
                <td>{{ itemstatus.description }}</td>
                <td>
                    <a href="{{ path('itemstatus_show', {'id': itemstatus.id}) }}">show</a>
                    <a href="{{ path('itemstatus_edit', {'id': itemstatus.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('itemstatus_new') }}">Create new</a>
{% endblock %}
