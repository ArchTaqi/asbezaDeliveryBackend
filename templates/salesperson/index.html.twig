{% extends 'base.html.twig' %}

{% block title %}Salesperson index{% endblock %}

{% block body %}
    <h1>Salesperson index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Agreement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salesperson in salespeople %}
            <tr>
                <td>{{ salesperson.id }}</td>
                <td>{{ salesperson.agreement }}</td>
                <td>
                    <a href="{{ path('salesperson_show', {'id': salesperson.id}) }}">show</a>
                    <a href="{{ path('salesperson_edit', {'id': salesperson.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('salesperson_new') }}">Create new</a>
{% endblock %}
