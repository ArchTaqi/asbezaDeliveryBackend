{% extends 'base.html.twig' %}

{% block title %}Branch index{% endblock %}

{% block body %}
    <h1>Branch index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Regdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branch in branches %}
            <tr>
                <td>{{ branch.id }}</td>
                <td>{{ branch.name }}</td>
                <td>{{ branch.description }}</td>
                <td>{{ branch.status }}</td>
                <td>{{ branch.regdate }}</td>
                <td>
                    <a href="{{ path('branch_show', {'id': branch.id}) }}">show</a>
                    <a href="{{ path('branch_edit', {'id': branch.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('branch_new') }}">Create new</a>
{% endblock %}
